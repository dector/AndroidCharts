<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LineView">
        <attr name="backgroundColor" format="color"/>
        <attr name="gridVerticalLineThickness" format="dimension"/>
        <attr name="gridVerticalLineColor" format="color"/>
        <attr name="gridHorizontalLineThickness" format="dimension"/>
        <attr name="gridHorizontalLineColor" format="color"/>
        <attr name="bottomTextSize" format="dimension"/>
        <attr name="bottomTextColor" format="color"/>
        <attr name="drawDotLine" format="boolean"/>
        <attr name="popupTextSize" format="dimension"/>
        <attr name="popupTextColor" format="color"/>
        <attr name="popupsVisibilityMode" format="enum">
            <enum name="none" value="0"/>
            <enum name="minmax" value="1"/>
            <enum name="all" value="2"/>
        </attr>
        <attr name="linesThickness" format="dimension"/>
        <attr name="innerDotRadius" format="dimension"/>
        <attr name="innerDotColor" format="color"/>
        <attr name="outerDotRadius" format="dimension"/>
    </declare-styleable>
</resources>